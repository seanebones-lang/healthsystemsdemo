{
  "version": 2,
  "framework": "nextjs",
  "installCommand": "npm ci",
  "buildCommand": "npm run build",
  "functions": {
    "app/**": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "memory": 1024,
  "maxLambdaSize": "50mb",
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  }
}
